<Window x:Class="BlockHasher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BLOCKHASHER" Height="613" Width="630" ResizeMode="CanMinimize" AllowDrop="True">
    <Grid Margin="0,0,0,0" Drop="ProcessDroppedFiles">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF81DC6C" Offset="0"/>
                <GradientStop Color="#FF08F4FF" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="hashlist" HorizontalAlignment="Left" Height="554" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287" VerticalScrollBarVisibility="Visible"/>
        <TextBox x:Name="blocksize" HorizontalAlignment="Left" Height="41" Margin="312,10,0,0" TextWrapping="Wrap" Text="100000" VerticalAlignment="Top" Width="102" FontSize="22"/>
        <Label Content="BLOCK SIZE IN HEX" HorizontalAlignment="Left" Margin="419,19,0,0" VerticalAlignment="Top"/>
        <Label Content="DROP A FILE HERE" HorizontalAlignment="Left" Margin="406,313,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
